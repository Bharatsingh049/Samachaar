<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".FragmentHorizontalRecyclerView"
    >

    <data>
        <variable
            name="recyclerViewAdapter"
            type="com.nickelfox.mvp.samachaar.allsamachaar.AllSamachaarRecyclerViewAdapter" />


    </data>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/business_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#eee"
        android:adapter="@{recyclerViewAdapter}"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</FrameLayout>
</layout>